<h2>編集</h2>

<%= form_with model:@book do |f| %>
  <div>
    <%= f.label :本のタイトル %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :著者 %><br>
    <%= f.text_area :author %>
  </div>

  <div>
    <%= f.label :コメント %><br>
    <%= f.text_field :introduction %>
  </div>

  <div>
    <%= f.label :画像 %><br>
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>
