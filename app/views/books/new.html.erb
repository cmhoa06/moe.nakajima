<% if @book.errors.any? %>
  <div class="alert alert-danger">
    <h4>以下のエラーがあります。</h4>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>本の新規登録</h2>
<%= form_with model: @book , url: books_path , local: true do |f| %>
  <div>
    <%= f.label :本のタイトル %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :著者 %><br>
    <%= f.text_field :author %>
  </div>

   <div>
    <%= f.label :コメント %><br>
    <%= f.text_area :introduction %>
  </div>

  <div>
    <%= f.label :画像 %><br>
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>

<% end %>